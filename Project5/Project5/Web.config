<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.web>
    <compilation debug="true" />
    <!-- Configure Forms Authentication -->
    <authentication mode="Forms">
      <forms loginUrl="~/Default.aspx" timeout="30" slidingExpiration="true" />
    </authentication>

    <!-- Configure Session State -->
    <sessionState mode="InProc" cookieless="false" timeout="20" />

    <!-- Configure Cookies to be HTTPOnly and require SSL -->
    <httpCookies httpOnlyCookies="true" requireSSL="true" />
    <!-- Set requireSSL to true -->
  </system.web>
  <system.serviceModel>
    <bindings>
      <basicHttpBinding>
        <binding name="BasicHttpBinding_IService1" />
      </basicHttpBinding>
    </bindings>
    <client>
      <endpoint address="http://localhost:53400/Service1.svc" binding="basicHttpBinding" bindingConfiguration="BasicHttpBinding_IService1" contract="ServiceReference1.IService1" name="BasicHttpBinding_IService1" />
    </client>
  </system.serviceModel>
</configuration>
